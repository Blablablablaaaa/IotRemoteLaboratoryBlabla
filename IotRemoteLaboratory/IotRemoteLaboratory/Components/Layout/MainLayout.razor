<style>
    .workflow-box {
        height: 100%;
        padding: 16px 8px;
        display: flex;
        flex-direction: column;
    }

    .workflow-box__header {
        display: flex;
        margin-bottom: 8px;
    }


    .workflow-box__title {
        flex: 1 0 0;
        font-size: 16px;
        font-weight: 400;
        line-height: 1;
    }

    .workflow-box__combobox {
        flex: 0 0 200px;
    }

    .workflow-box__item {
        margin-bottom: 10px;
        border: 1px solid #1E1E1E;
        padding: 16px;
        flex: 0 0 auto;
    }

    .workflow-box__item.-stretch {
        flex: 1 0 0;
    }

        .workflow-box__item:last-child {
            margin-bottom: 0;
        }

    .combobox {
        border: 1px solid #1e1e1e;
        border-radius: 5px;
        position: relative;
        cursor: pointer;
    }

        .combobox:before {
            display: block;
            content: '';
            position: absolute;
            top: 50%;
            margin-top: -5px;
            right: 12px;
            height: 6px;
            width: 6px;
            border-bottom: 2px solid var(--font-color-active);
            border-right: 2px solid var(--font-color-active);
            transform: rotate(45deg);
        }

        .combobox.-active:before {
            transform: rotate(225deg);
            margin-top: -2px;
        }

    .combobox__item {
        padding: 8px 32px 8px 16px;
        font-size: 14px;
        font-weight: 500;
        line-height: 1.3;
    }

    .combobox__items {
        display: none;
        position: absolute;
        top: calc(100% + 5px);
        border: 1px solid #1e1e1e;
        background: #2C2C2C;
        border-radius: 5px;
        width: 100%;
    }

    .combobox.-visible .combobox__items {
        display: block;
    }

    .combobox__header {
    }
</style>

