    .controls-list {
        display: flex;
        flex-wrap: wrap;
        gap: 8px 32px;
    }

    .controls-list__item {
    }

    .checkbox {
        position: relative;
        cursor: pointer;
    }
    
    .checkbox input {
        display: none;
        width: 0;
        height: 0;
        opacity: 0;
        position: absolute;
        top: -9999px;
    }

        .checkbox span {
            padding-left: 20px;
            position: relative;
            font-size: 14px;
            font-weight: 400;
            line-height: 1;
        }

        .checkbox input:checked + span::after {
            display: block;
        }

            .checkbox span::before {
                display: block;
                content: '';
                width: 12px;
                height: 12px;
                border: 2px solid var(--font-color-active);
                position: absolute;
                top: 0;
                left: 0;
            }

            .checkbox span::after {
                display: none;
                content: '';
                width: 8px;
                height: 4px;
                position: absolute;
                left: 3px;
                top: 4px;
                border-left: 2px solid var(--font-color-active);
                border-bottom: 2px solid var(--font-color-active);
                transform: rotate(-50deg);
            }
</style>

